<div id="otu_to_taxon_name_index">
  <h1>Task: match OTU to taxon name</h1>
  <%= render("/shared/data/all/list/list_header", objects: @otus) -%>


</div>


<% @otus.each do |o| -%>
    <div class="flex-wrap-row" flex-direction="column">
      <%= form_for(o, remote: true, format: :json) do |f| -%>
          <%= link_to(o.name, "/otus/#{o.id.to_s}", {otu_id: "#{o.id.to_s}"}) -%>
        <%= f.hidden_field :id %>
          <%= f.label :taxon_name -%>
          <%= render partial: '/workbench/elements/forms/ajax_select',
                     locals: {controller: '/taxon_names',
                              object: 'otu',
                              method: 'taxon_name_id',
                              tag_id: "taxon_name_id_for_otu_#{o.id}",
                              display: taxon_name_autocomplete_selected_tag(o.taxon_name),
                              size: 20} -%>
          <span id="<%= 'otu_' + o.id.to_s -%>" class="chkbox" width="50em"> </span>
          <%= f.submit -%>
    <% end %>
    </div>    <br>
<% end %>

