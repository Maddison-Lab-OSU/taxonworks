<%= render("/shared/data/all/list/list_header", objects: @otus) -%>

<table class="tablesorter">
  <thead>
  <tr>
    <%= fancy_th_tag(name: 'OTU name') -%>
    <%= fancy_th_tag(name: '') -%>
    <%= fancy_th_tag(name: 'Suggested') -%>
    <%= fancy_th_tag(name: '') -%>
  </tr>
  </thead>

  <tbody>
  <% @otus.each do |otu| %>
      <%= content_tag(:tr, class: [:contextMenuCells, :btn, 'btn-neutral']) do -%>
          <%= form_tag(update_otu_url) %>
          <td><%= otu.name %></td>
          <td>    <%= render partial: 'workbench/elements/forms/ajax_select',
                             locals: {controller: 'otu_to_taxon_name',
                                      object: nil,
                                      method: 'id',
                                      tag_id: 'taxon_name_id_for_otu_match_form',
                                      size: '',
                                      display: ''} %>
          </td>
          <td><%= "{radio button list}" -%></td>
          <td><%= submit_tag(value="Update OTU") %></td>
      <% end %>
  <% end %>
  </tbody>
</table>

