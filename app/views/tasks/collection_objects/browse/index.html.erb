<h1 class="task_header"> Browse collection objects </h1>

<div id="browse-view" class="">
  <div class="panel content"> 
    <div class="flex-separate middle">
      <!---- TODO: trigger ajax build ---->
      <%= dwc_table([@collection_object]) -%>

      <span class="right_float"><%= pin_item_to_pinboard_link(@collection_object, sessions_current_user) -%></span>    
    </div>
  </div>

  <div id="show" class="panels-container">
    <div class="item item1">
      <div class="panel separate-right">
        <div class="title nav-line">
          Navigate 
        </div>

        <div class="navigation-controls">
          <%= link_to(content_tag(:span, 'Show', class: 'small-icon'), @collection_object.metamorphosize, class: 'navigation-item') -%>
          <%= edit_object_link(@collection_object) -%>
        </div>

        <div class="navigation-controls">
          <%= previous_link(@collection_object, target: :browse_collection_objects_task_path) -%>
          <%= next_link(@collection_object, target: :browse_collection_objects_task_path) -%>
        </div>

        <div class="navigation-controls">
          <div class="navigation-item">
            <%= form_tag(browse_collection_objects_task_path, method: :get) do %>
              <%= render  'workbench/elements/forms/ajax_select',
                controller: '/collection_objects',
                object: '',
                method: 'id',
                send_select: true,
                tag_id:  'collection_object_id_for_browse_collection_object'
              %>
          <% end %>
          </div>
        </div>

        <div class="content">
        </div>

      </div>
    </div>

    <div class="item item2">
      <div class="flexbox">
        <div id="brownse-main-panel" class="panel separate-left separate-right ">
          <div class="content subtitle filter middle"> 
            <%= content_tag(:p, collection_object_tag(@collection_object), class: 'item center_text name') -%>
          </div>
          <div class="horizontal-center-content filter">
            <div id="filterBrowse_button" class="circle-button open"></div>
          </div>            

          <div class="content">
            <div class="collection_object_history">
              <%= collection_object_history_table(@data) -%>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

